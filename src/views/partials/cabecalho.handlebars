
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Landing Page Luxo Rosa</title>

    <!-- Bootstrap CSS -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="css/style.css" />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css"
    />
    
  </head>
  <body>
    <!-- Cabeçalho Luxo Preto & Dourado -->
    <header class="header-luxo fixed-top">
      <div class="container">
        <div class="d-flex justify-content-between align-items-center py-3">
          <div class="logo"><a href="/" style="color:#FF8DA1">Luxury Brand</a></div>

          <nav class="menu">
            <a href="/usuarios">Listar Usuários</a>
            
            <a href="/novoUser">Cadastrar novo Usuário</a>
           
            <a href="/pesquisaUser">Pesquisar Usuários</a>
          </nav>

          {{#if usuarioLogado}}

 <div class="d-flex align-items-center gap-3">
    <span class="badge bg-success fs-6 px-4 py-2 shadow">
      {{dadoslogin.dataValues.emailUsuario}}
    </span>

    <a href="/logout" class="btn btn-outline-danger btn-sm">
      Sair
    </a>
  </div>

{{else}}

          <!-- Login cascata -->
          <div class="dropdown animate">
            <button
              class="btn btn-login dropdown-toggle"
              data-bs-toggle="dropdown"
            >
              Login
            </button>
            <form action="/login" method="post">
            <div class="dropdown-menu dropdown-menu-end p-3 login-glass">
              <input
                type="email"
                class="form-control mb-2"
                placeholder="Email"
                name="email"
                pattern="[a-z0-9._%+\-]+@[a-z0-9.\-]+\.[a-z]{2,}$" 
                title="Por favor, insira um e-mail válido (ex: usuario@dominio.com)"
                required
              />
              <input
                type="password"
                class="form-control mb-2"
                placeholder="Senha"
                name="senha"
                required
              />
              <button type="submit" class="btn btn-gold w-100">Entrar</button>
            </div>
            </form>

            
            {{/if}}
          </div>
        </div>
      </div>
    </header>